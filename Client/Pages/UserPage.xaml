<Page x:Class="Client.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="UserPage">

    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="Background" Value="#f4f4f6" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="20,0,0,0" />
        </Style>
        <Style x:Key="Base" TargetType="Control">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style x:Key="Input" TargetType="Control" BasedOn="{StaticResource Base}">
            <Setter Property="Background" Value="#f4f4f6" />
            <Setter Property="Padding" Value="15,0,15,0" />
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource Base}">
            <Setter Property="Background" Value="#0bbffa" />
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Height" Value="50" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Name="Border" BorderThickness="0,0,0,1" BorderBrush="#f4f4f6">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#f4f4f6" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#fcd1df" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>

        <TabControl x:Name="UsersPages" Padding="0" BorderThickness="0">
            <TabItem Visibility="Collapsed">
                <Grid>

                    <Grid Grid.Column="0">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />

                            </Grid.RowDefinitions>
                            <TextBox x:Name="GroupInput" Style="{StaticResource Input}" Margin="0,5,0,5" Grid.Column="1" Grid.Row="1"  Padding="10,5,10,5"/>

                            <Button Content="make new Group" x:Name="Group" Grid.Column="1" Grid.Row="4" Click="Invite_Click_1"  Padding="10,5,10,5" />


                        </Grid>
                        <Button Content="back " Margin="10,10,10,10" Padding="10,5,10,5" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Back_Click">

                        </Button>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />

                            </Grid.RowDefinitions>

                            <TextBox x:Name="InviteContact" Style="{StaticResource Input}" Margin="0,5,0,5" Grid.Column="1" Grid.Row="1"  Padding="10,5,10,5"/>

                            <Button Content="make new Invite" x:Name="Invite" Grid.Column="1" Grid.Row="4" Click="Invite_Click"  Padding="10,5,10,5" />
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1">
                        <ListBox x:Name="InvitesList" Background="WhiteSmoke" ItemsSource="{Binding Invites}" Margin="0,0,0,0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="15,0,15,0" />
                                        <Button Tag="{Binding Id}" Click="AcceptInviteBtn_Click" Grid.Column="1">Accept</Button>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                    <Button Content="back " Name="Back" Margin="10,10,10,10" Padding="10,5,10,5" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Back_Click">

                    </Button>
                </Grid>
            </TabItem>
            <TabItem Visibility="Collapsed">

             
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="Contacts" />
                        <ColumnDefinition x:Name="ChatPanel" Width="3*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Button Grid.Column="0" Grid.Row="0" Click="GoToContacts_Click">Contacts</Button>
                        <Button Grid.Column="1" Grid.Row="0" Click="GoToGroups_Click">Groups</Button>
                        <Button Grid.Column="2" Grid.Row="0" Click="GoToInvites_Click">Invites</Button>

                        <TabControl x:Name="ListSection"  Padding="0" BorderThickness="0" Grid.Row="1" Grid.ColumnSpan="3">

                            <TabItem Visibility="Collapsed">
                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="40" />
                                    </Grid.RowDefinitions>

                                    <ListBox x:Name="ContactsList" ItemsSource="{Binding Contacts}" SelectionChanged="ContactsList_SelectionChanged" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,-3,-2,0">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="15,0,15,0" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>


                                </Grid>
                            </TabItem>

                            <TabItem Visibility="Collapsed">
                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="40" />
                                    </Grid.RowDefinitions>

                                    <ListBox x:Name="GroupsList" ItemsSource="{Binding Groups}" SelectionChanged="GroupsList_SelectionChanged" Grid.Row="0" Grid.ColumnSpan="3" Margin="0,-3,-2,0">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="15,0,15,0" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <Button x:Name="CreateGroupBtn" Click="CreateGroupBtn_Click_1" FontSize="16" Grid.Row="1">Create group</Button>
                                </Grid>
                            </TabItem>

