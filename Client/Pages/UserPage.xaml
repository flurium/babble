    <Grid Grid.Column="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition Width="50" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="40" />
        <RowDefinition />
        <RowDefinition Height="40" />
      </Grid.RowDefinitions>

      <Label Name="interlocutor" Grid.Column="0" Grid.Row="0" Content="interlocutor" />
      <Button Grid.Column="1" Grid.Row="0" x:Name="Exit" Click="Exit_Click">Exit</Button>

      <ListBox Grid.Row="1" Grid.ColumnSpan="3" x:Name="MessageList" ScrollViewer.VerticalScrollBarVisibility="Auto"  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
        <ListBox.ItemContainerStyle>
          <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="#f4f4f6" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5" />
          </Style>
        </ListBox.ItemContainerStyle>
        <ListBox.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding Path=Text}" TextWrapping="Wrap"></TextBlock>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>

      <TextBox Grid.Column="0" Grid.Row="2" x:Name="MessageWrite" Style="{StaticResource Input}"></TextBox>
      <Button Grid.Column="1" Grid.Row="2" x:Name="MessageSend">Send</Button>
    </Grid>
  </Grid>
</Page>