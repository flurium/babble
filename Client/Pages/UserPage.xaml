<Page x:Class="Client.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
       d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

  <Page.Resources>
    <Style TargetType="Label">
      <Setter Property="Background" Value="#f4f4f6" />
      <Setter Property="VerticalContentAlignment" Value="Center" />
      <Setter Property="Padding" Value="20,0,0,0" />
    </Style>
    <Style x:Key="Base" TargetType="Control">
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
    <Style x:Key="Input" TargetType="Control" BasedOn="{StaticResource Base}">
      <Setter Property="Background" Value="#f4f4f6" />
      <Setter Property="Padding" Value="15,0,0,0" />
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource Base}">
      <Setter Property="Background" Value="#0bbffa" />
    </Style>
    <Style TargetType="ListBox">
      <Setter Property="BorderThickness" Value="0"/>
    </Style>
    <Style TargetType="ListBoxItem">
      <Setter Property="Background" Value="#f4f4f6" />
      <Setter Property="Height" Value="50" />
      <Setter Property="FontSize" Value="20" />
    </Style>
  </Page.Resources>

  <Grid Background="White">
    <Grid.ColumnDefinitions>
      <ColumnDefinition x:Name="Contacts" />
      <ColumnDefinition x:Name="Chating" Width="3*" />
    </Grid.ColumnDefinitions>


    <Grid Grid.Column="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="40"/>
        <RowDefinition/>
      </Grid.RowDefinitions>
      
      
      <Button Grid.Column="0" Grid.Row="0" Click="GoToContacts_Click">Contacts</Button>
      <Button Grid.Column="1" Grid.Row="0" Click="GoToGroups_Click">Groups</Button>
      <Button Grid.Column="2" Grid.Row="0" Click="GoToInvites_Click">Invites</Button>

      <TabControl x:Name="ListSection" BorderThickness="0" Grid.Row="1" Grid.ColumnSpan="3">
        
        <TabItem Visibility="Collapsed">
          <ListBox x:Name="ContactsList" ItemsSource="{Binding Contacts}">
            <ListBox.ItemTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding Path=Text}" TextWrapping="Wrap" />
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </TabItem>
        
        <TabItem Visibility="Collapsed">
          <ListBox x:Name="GroupsList" ItemsSource="{Binding Groups}"><!--ItemsSource="{Binding Path=Groups, Mode=OneWay}"-->
            <ListBox.ItemTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding Name}"/>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </TabItem>
        
        <TabItem Visibility="Collapsed">
          <ListBox x:Name="InvitesList" ItemsSource="{Binding Contacts}">
            
          </ListBox>
        </TabItem>
      </TabControl>

    </Grid>

    

